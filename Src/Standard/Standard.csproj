<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net40;netcoreapp2.0;netstandard2.0</TargetFrameworks>
        <AssemblyName>Apps72.Dev.Data</AssemblyName>
        <RootNamespace>Apps72.Dev.Data</RootNamespace>
        <Version>2.8.0-beta</Version>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Denis Voituron</Authors>
        <Company>Denis Voituron</Company>
        <Product>SqlDatabaseCommand</Product>
		<PackageId>Apps72.Dev.Data.Core</PackageId>
        <PackageProjectUrl>https://github.com/Apps72/Dev.Data</PackageProjectUrl>
        <PackageIconUrl>https://raw.githubusercontent.com/Apps72/Dev.Data/master/Logo.png</PackageIconUrl>
        <RepositoryUrl>https://github.com/Apps72/Dev.Data</RepositoryUrl>
		<PackageReleaseNotes>https://github.com/Apps72/Dev.Data#ReleaseNotes</PackageReleaseNotes>
        <PackageTags>Data Databse SQL DatabaseCommand DotNetCore Oracle SQLite SqlServer Dapper</PackageTags>
        <Copyright>Copyright 2018 Denis Voituron</Copyright>
        <Description>The Dev.Data.SqlDatabaseCommand is a set of components helping C# developers to execute SQL Queries and to retrieve data from SQL Server. It is a light and pragmatic framework that contains only the essential classes needed to create SQL query strings, define parameters and transaction, and execute it to retrieve all data converted in typed objects.</Description>
    </PropertyGroup>

    <Import Project="..\Common\Common.projitems" Label="Shared" />

    <!--NET 4.0-->
    <ItemGroup Condition=" $(TargetFramework) =='net40' ">
        
    </ItemGroup>
    
    <!--NET Core 2.0-->
    <ItemGroup Condition=" $(TargetFramework) =='netcoreapp2.0' ">
        <PackageReference Include="System.Data.Common" Version=" 4.3.0" />
    </ItemGroup>

    <!--NET Standard 2.0-->
    <ItemGroup Condition=" $(TargetFramework) =='netstandard2.0' ">
        <PackageReference Include="System.Data.Common" Version=" 4.3.0" />
    </ItemGroup>


</Project>
